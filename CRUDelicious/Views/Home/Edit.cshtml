@model Dish

<link rel="stylesheet" href="~/css/site.css">

<h1>Add a new Dish!</h1>
<h4><a href="/"> Home </a> | <span > Add a Dish </span> </h4>

<form 
    asp-controller="Home"
    asp-action="Update"
    asp-route-dishID="@Model.DishId"
    method="post">
    <div class = "d-flex spacing">
        <label asp-for="Chef">Name of Chef: </label>
        <span asp-validation-for="Chef" style="color:red"></span>
        <input asp-for="Chef" value="@Model.Chef">
    </div>
    <div class = "d-flex spacing">
        <label asp-for="Name">Name of Dish:</label>
        <span asp-validation-for="Name" style="color:red"></span> 
        <input asp-for="Name" value="@Model.Name">
    </div>
    <div class = "d-flex spacing">
        <label asp-for="Calories"># of Calories: </label>
        <span asp-validation-for="Calories" style="color:red"></span>
        <input asp-for="Calories" value="@Model.Calories">
    </div>
    <div class = "d-flex spacing">
        <label asp-for="Tastiness"># of Tastiness: </label>
        <span asp-validation-for="Tastiness" style="color:red"></span>
        <select name="Tastiness" asp-for="Tastiness"  value="@Model.Tastiness">
            <option hidden value="">Choose a Tastiness</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <div class = "spacing">
        <label asp-for="Description">Description: </label>
        <span asp-validation-for="Description" style="color:red"></span>
        <textarea name = "Description" rows="5" cols="30" asp-for="Description" value="@Model.Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary"> Update Dish </button>
</form>