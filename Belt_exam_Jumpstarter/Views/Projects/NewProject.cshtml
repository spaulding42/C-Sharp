<header class="d-flex justify-content-between">
    <div class= "d-flex">
        <h3>JumpStarter</h3>
        <a href="/projects/new"> Start a Project</a>
    </div>
    <div>
        <a href="/projects">Home</a> |
        <a href="/logout">Logout</a>
    </div>
</header>

@model Project

<h1>Start a Project</h1>

<form asp-controller="Projects" asp-action="SubmitProject"  method="post">
    <div class = "d-flex spacing">
        <label asp-for="Title"></label>
        <span asp-validation-for="Title" style="color:red"></span> 
        <input asp-for="Title">
    </div>
    <div class = "d-flex spacing">
        <label asp-for="Goal"></label>
        <span asp-validation-for="Goal" style="color:red"></span> 
        <input asp-for="Goal">
    </div>
    <div class = "d-flex spacing">
        <label asp-for="EndDate"></label>
        <span asp-validation-for="EndDate" style="color:red"></span> 
        <input asp-for="EndDate">
    </div>
    <div class = "d-flex spacing">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" style="color:red"></span> 
        <input asp-for="Description">
    </div>
    
    
    <button type="submit" class="btn btn-success"> Get started! </button>
</form>